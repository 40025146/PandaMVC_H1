@model IEnumerable<PandaMVC_H1.Models.客戶清單>

@{
    ViewBag.Title = "Index";
}

<h2>客戶清單</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.聯絡人數量)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行數量)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </th>
        <td>
            @if (item.聯絡人數量 != null) {
            @Html.DisplayFor(modelItem => item.聯絡人數量)
            }
            else
            {
                <div>0</div>
            }
        </td>
        <td>
            @if (item.銀行數量 != null)
            {
            @Html.DisplayFor(modelItem => item.銀行數量)
            } else {
            <div>0</div>
            }

        </td>
        
    </tr>
}

</table>
